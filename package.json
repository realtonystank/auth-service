{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "authentication service",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon ./src/server.ts",
    "build": "tsc",
    "test": "jest --no-cache --coverage --all --runInBand",
    "test:watch": "jest --watch --runInBand",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "ts-node src/index.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:create": "typeorm-ts-node-commonjs migration:create"
  },
  "keywords": [
    "auth",
    "node"
  ],
  "author": "Priyansh Singh Rajwar <rajwars.priyansh@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^16.11.10",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "mock-jwks": "^1.0.10",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.6",
    "ts-node": "10.9.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.23.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rsa-pem-to-jwk": "^1.1.3",
    "supertest": "^7.0.0",
    "typeorm": "0.3.20",
    "winston": "^3.17.0"
  }
}
